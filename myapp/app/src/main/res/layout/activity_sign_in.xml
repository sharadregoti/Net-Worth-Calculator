<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ActivitySignIn">


    <ImageView
        android:id="@+id/SplashScreenImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:src="@mipmap/app_icon_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/quote"
        style="@style/TextAppearance.MaterialComponents.Subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="If you can't measure it, you can't improve it"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SplashScreenImage" />


    <TextView
        android:id="@+id/sign_in_continue_with_text"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Continue with"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quote" />

    <View
        android:id="@+id/sign_in_left_line"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginEnd="10dp"
        android:background="?android:attr/dividerVertical"
        app:layout_constraintBottom_toBottomOf="@id/sign_in_continue_with_text"
        app:layout_constraintEnd_toStartOf="@id/sign_in_continue_with_text"
        app:layout_constraintTop_toTopOf="@id/sign_in_continue_with_text" />

    <View
        android:id="@+id/sign_in_right_line"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginStart="10dp"
        android:background="?android:attr/dividerVertical"
        app:layout_constraintBottom_toBottomOf="@id/sign_in_continue_with_text"
        app:layout_constraintStart_toEndOf="@id/sign_in_continue_with_text"
        app:layout_constraintTop_toTopOf="@id/sign_in_continue_with_text" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sign_in_continue_with_text" />

    <TextView
        android:id="@+id/activity_sign_in_version_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="test"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>